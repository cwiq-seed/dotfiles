#!/usr/bin/env bash

# This script installs necessary packages for a specific Linux
# distribution. ONLY install packages needed for CWIQ-Seed. Additional
# packages should be installed via Ansible.

{{- if .isUbuntu }}
# Ubuntu specific packages
echo "Installing Ubuntu packages..."
sudo apt update
sudo apt install -y \
     build-essential \
     ccze \
     dconf-cli \
     libffi-dev \
     libsecret-1-0 \
     libssl-dev \
     molly-guard \
     python3-dev \
     tilix

sudo apt upgrade -y
{{- else if .isAlmaLinux }}
# Alma Linux specific packages
echo "Installing Alma Linux packages..."
sudo dnf update -y
sudo dnf install -y \
     ccze \
     dconf \
     gcc \
     libffi-devel \
     libsecret \
     make \
     openssl-devel \
     python3-devel \
     tilix
{{- else }}
echo "Unknown OS, skipping package installation"
{{- end }}
